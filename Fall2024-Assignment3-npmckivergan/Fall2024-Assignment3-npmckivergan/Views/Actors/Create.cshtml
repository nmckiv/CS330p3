@model Fall2024_Assignment3_npmckivergan.Models.Actor

@{
    ViewData["Title"] = "Create";
}

<style>
    .content {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px; 
        border-radius: 10px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px; 
    }

    .button {
        display: inline-block;
        padding: 10px 15px; 
        margin-top: 10px; 
        margin-right: 5px; 
        border-radius: 5px; 
        background-color: #1e90ff; 
        color: #ffffff; 
        text-decoration: none; 
        transition: background-color 0.3s; 
    }

    .button:hover {
        background-color: #ffa500;
    }
</style>

<div class="content">
    <h1>Create</h1>

    <h4>Actor</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
          
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IMDB_link" class="control-label"></label>
                    <input asp-for="IMDB_link" class="form-control" />
                    <span asp-validation-for="IMDB_link" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Photo" class="control-label"></label>
                    <input type="file" id="Photo" name="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="button">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
