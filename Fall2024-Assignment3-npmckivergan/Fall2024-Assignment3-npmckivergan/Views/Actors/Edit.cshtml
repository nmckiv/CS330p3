@model Fall2024_Assignment3_npmckivergan.Models.Actor

@{
    ViewData["Title"] = "Edit";
}

<style>
    .content {
        background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
        padding: 20px; /* Add some padding */
        border-radius: 10px; /* Rounded corners */
        color: #f0f0f0; /* Light text color */
        margin-bottom: 20px; /* Space below the content */
    }

    .form-group {
        margin-bottom: 15px; /* Space between form groups */
    }

    .button {
        display: inline-block;
        padding: 10px 15px; /* Padding for the button */
        margin-top: 10px; /* Margin on top for spacing */
        margin-right: 5px; /* Space between buttons */
        border-radius: 5px; /* Rounded corners */
        background-color: #1e90ff; /* Bright blue background */
        color: #ffffff; /* White text */
        text-decoration: none; /* No underline */
        transition: background-color 0.3s; /* Transition effect */
    }

        .button:hover {
            background-color: #ffa500; /* Change color on hover */
        }
</style>

<div class="content text-center">
    <h1>Edit</h1>

    <h4>Actor</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IMDB_link" class="control-label"></label>
                    <input asp-for="IMDB_link" class="form-control" />
                    <span asp-validation-for="IMDB_link" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label"></label>
                    <input type="file" id="Photo" name="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="button" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="button">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
