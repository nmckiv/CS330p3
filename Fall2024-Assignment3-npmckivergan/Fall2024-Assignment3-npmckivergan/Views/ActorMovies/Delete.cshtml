@model Fall2024_Assignment3_npmckivergan.Models.ActorMovie

@{
    ViewData["Title"] = "Delete";
}

<style>
    .content {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        color: #000;
    }

    h1, h3 {
        color: #333;
    }

    .btn {
        margin-top: 10px; 
    }

    .confirmation-message {
        margin-bottom: 20px;
        font-weight: bold;
    }
</style>

<div class="content">
    <h1>Delete</h1>

    <h3 class="confirmation-message">Are you sure you want to delete this?</h3>

    <div>
        <h4>ActorMovie</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.Name)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
