@model Fall2024_Assignment3_npmckivergan.Models.ActorMovie

@{
    ViewData["Title"] = "Delete";
}

<style>
    .content {
        background-color: rgba(255, 255, 255, 0.9); /* Light background */
        padding: 20px; /* Padding around the content */
        border-radius: 10px; /* Rounded corners */
        color: #000; /* Dark text */
    }

    h1, h3 {
        color: #333; /* Dark gray for headers */
    }

    .btn {
        margin-top: 10px; /* Space above the buttons */
    }

    .confirmation-message {
        margin-bottom: 20px; /* Space below the confirmation message */
        font-weight: bold; /* Bold for emphasis */
    }
</style>

<div class="content">
    <h1>Delete</h1>

    <h3 class="confirmation-message">Are you sure you want to delete this?</h3>

    <div>
        <h4>ActorMovie</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Title) <!-- Display movie title instead of ID -->
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Actor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Actor.Name) <!-- Display actor name instead of ID -->
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
