@model IEnumerable<Fall2024_Assignment3_npmckivergan.Models.ActorMovie>

@{
    ViewData["Title"] = "Index";
}

<style>
    .content {
        background-color: rgba(255, 255, 255, 0.9); /* Light background */
        padding: 20px; /* Padding for the table */
        border-radius: 10px; /* Rounded corners */
        color: #000; /* Dark text for readability */
        margin-bottom: 20px; /* Space below the content */
    }

    h1 {
        color: #333; /* Dark gray for header */
    }

    .table {
        background-color: #f8f9fa; /* Light background for table */
        color: #000; /* Dark text for table content */
        border-radius: 5px; /* Rounded corners for the table */
    }

    th, td {
        text-align: center; /* Center align the table text */
    }

    a {
        color: #1e90ff; /* Bright blue for links */
        text-decoration: none; /* No underline */
    }

    a:hover {
        color: #ff6347; /* Change color on hover */
    }
</style>

<div class="content">
    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Movie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Actor)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Actor.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
