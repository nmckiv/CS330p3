@model IEnumerable<Fall2024_Assignment3_npmckivergan.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<style>
    .content {
        background-color: rgba(0, 0, 0, 0.7); /* Semi-transparent black background */
        padding: 20px; /* Add some padding */
        border-radius: 10px; /* Rounded corners */
        color: #f0f0f0; /* Light text color */
        margin-bottom: 20px; /* Space below the content */
    }

    .table {
        width: 100%; /* Full width */
        color: #f0f0f0; /* Light text for table */
    }

        .table th {
            background-color: rgba(255, 255, 255, 0.1); /* Light transparent background for headers */
            color: #ffffff; /* White text color for headers */
        }

        .table td {
            background-color: rgba(255, 255, 255, 0.05); /* Slightly darker for table cells */
        }

    a.button {
        display: inline-block;
        padding: 10px 15px; /* Padding for the button */
        margin: 5px; /* Margin for spacing */
        border-radius: 5px; /* Rounded corners */
        background-color: #1e90ff; /* Bright blue background */
        color: #ffffff; /* White text */
        text-decoration: none; /* No underline */
        transition: background-color 0.3s; /* Transition effect */
    }

        a.button:hover {
            background-color: #ffa500; /* Change color on hover */
        }

    img {
        border-radius: 10%; /* Rounded image corners */
    }
</style>

<div class="content text-center">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="button">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Genre)</th>
                <th>@Html.DisplayNameFor(model => model.Year)</th>
                <th>IMDB</th>
                <th>@Html.DisplayNameFor(model => model.Media)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Year)</td>
                    <td><a href="@item.IMDB_link" target="_blank">@item.IMDB_link</a></td>
                    <td>
                        @if (item.Media != null)
                        {
                            var base64 = Convert.ToBase64String(item.Media);
                            var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                            <img src="@imgSrc" height="225" width="150" />
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="button">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="button">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
